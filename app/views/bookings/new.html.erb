<div class="container m-5">
    <h1>Hello <%= current_user.first_name %>, when do you want to book <%= @pokemon.name %>?</h1>
  <div class="row">
    <div class="col-sm-6">
      <img src="<%= @pokemon.image_url %>" alt="Booked Pokemon image">
    </div>
    <div class="col-sm-6">
      <%= simple_form_for([@pokemon, @booking]) do |f| %>
        <%= f.input :date, as: :date, html5: true %>
        <%= f.submit, class:"btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>
