<div class="container m-5">
    <h1 class="text-light fs-5">Hello <%= current_user.first_name %>, when do you want to book <%= @pokemon.name %>?</h1>
  <div class="row">
    <div class="col-sm-4 card m-5">
      <img src="<%= @pokemon.image_url %>" alt="Booked Pokemon image">
    </div>

    <div class="col-sm-4 card m-5 p-5">

      <%= simple_form_for [@pokemon, @booking],
        html: {
          data: {
            controller: 'flatpickr',
            flatpickr_dates_value: { disable: @pokemon.flatpickr_booked_dates_object }
          }
        } do |f| %>
        <%= f.input :date,
          as: :string,
          input_html: {
            data: {
               flatpickr_target: 'startDateInput'
          }} %>
        <%= f.submit class:"btn btn-primary mt-5" %>
      <% end %>

    </div>

  </div>
</div>
