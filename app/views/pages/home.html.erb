<%# <div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://img.lemde.fr/2022/12/23/0/0/1920/1080/1920/0/75/0/884ebe7_1671792562779-legendes-pokemon-arceus-un-monde-ouvert-pas-si-legendaire-3711b09d-1920-1080-center.jpg);"> %>
<div class="banner" >
  <div class="container">
    <h1>Find your Pokemon !</h1>
    <p>Search or browse.</p>
    <%= form_with url: pokemons_path, method: :get, class: "d-flex" do %>
      <%= text_field_tag :query,
        params[:query],
        class: "form-control",
        placeholder: "Find a pokemon by name or type"
      %>
      <%= submit_tag "Find them all", class: "btn btn-primary" %>
    <% end %>
    <%= link_to "Pokedex", pokemons_path, class: "btn btn-primary"%>
  </div>
</div>

<%# with ruby %>
<div class="cards">
  <div class="container mt-4 d-flex justify-content-around">
    <div class="row">
      <% @pokemons.sample(4).each do |pokemon| %>
        <div class="col-md-3">
          <div class="card" style="width: 18rem; ">
            <%= image_tag pokemon.image_url %>
            <div class="card-header d-flex justify-content-between">
              <div class="header-left">
                <h5 class="card-title"><%= pokemon.name%></h5>
                <h6 class="card-subtitle mb-2 text-muted">#<%= pokemon.id%></h6>
                <p class="d-inline">
                  <% if pokemon.type1 == "Poison"  %>
                    <span class="poison"><%= pokemon.type1.upcase %></span>
                  <% elsif pokemon.type1 == "Feu" %>
                    <span class="feu"><%= pokemon.type1.upcase %></span>
                  <% elsif pokemon.type1 == "Vol" %>
                    <span class="vol"><%= pokemon.type1.upcase %></span>
                  <% elsif pokemon.type1 == "Eau" %>
                    <span class="eau"><%= pokemon.type1.upcase %></span>
                  <% elsif pokemon.type1 == "Insecte" %>
                    <span class="insecte"><%= pokemon.type1.upcase %></span>
                  <% elsif pokemon.type1 == "Normal" %>
                    <span class="normal"><%= pokemon.type1.upcase %></span>
                  <% elsif pokemon.type1 == "Électrik" %>
                    <span class="electrik"><%= pokemon.type1.upcase %></span>
                  <% elsif pokemon.type1 == "Sol" %>
                    <span class="sol"><%= pokemon.type1.upcase %></span>
                  <% elsif pokemon.type1 == "Fée" %>
                    <span class="fee"><%= pokemon.type1.upcase %></span>
                  <% elsif pokemon.type1 == "Combat" %>
                    <span class="combat"><%= pokemon.type1.upcase %></span>
                  <% elsif pokemon.type1 == "Psy" %>
                    <span class="psy"><%= pokemon.type1.upcase %></span>
                  <% elsif pokemon.type1 == "Acier" %>
                    <span class="acier"><%= pokemon.type1.upcase %></span>
                  <% elsif pokemon.type1 == "Plante" %>
                    <span class="plante"><%= pokemon.type1.upcase %></span>
                  <% elsif pokemon.type1 == "Roche" %>
                    <span class="roche"><%= pokemon.type1.upcase %></span>
                  <% elsif pokemon.type1 == "Dragon" %>
                    <span class="dragon"><%= pokemon.type1.upcase %></span>
                  <% elsif pokemon.type1 == "Glace" %>
                    <span class="glace"><%= pokemon.type1.upcase %></span>
                  <% elsif pokemon.type1 == "Spectre" %>
                    <span class="spectre"><%= pokemon.type1.upcase %></span>
                  <% end %>
                </p>
                <p class="d-inline">
                  <% if pokemon.type2 == "Poison"  %>
                    <span class="poison"><%= pokemon.type2.upcase %></span>
                  <% elsif pokemon.type2 == "Feu" %>
                    <span class="feu"><%= pokemon.type2.upcase %></span>
                  <% elsif pokemon.type2 == "Vol" %>
                    <span class="vol"><%= pokemon.type2.upcase %></span>
                  <% elsif pokemon.type2 == "Eau" %>
                    <span class="eau"><%= pokemon.type2.upcase %></span>
                  <% elsif pokemon.type2 == "Insecte" %>
                    <span class="insecte"><%= pokemon.type2.upcase %></span>
                  <% elsif pokemon.type2 == "Normal" %>
                    <span class="normal"><%= pokemon.type2.upcase %></span>
                  <% elsif pokemon.type2 == "Électrik" %>
                    <span class="electrik"><%= pokemon.type2.upcase %></span>
                  <% elsif pokemon.type2 == "Sol" %>
                    <span class="sol"><%= pokemon.type2.upcase %></span>
                  <% elsif pokemon.type2 == "Fée" %>
                    <span class="fee"><%= pokemon.type2.upcase %></span>
                  <% elsif pokemon.type2 == "Combat" %>
                    <span class="combat"><%= pokemon.type2.upcase %></span>
                  <% elsif pokemon.type2 == "Psy" %>
                    <span class="psy"><%= pokemon.type2.upcase %></span>
                  <% elsif pokemon.type2 == "Acier" %>
                    <span class="acier"><%= pokemon.type2.upcase %></span>
                  <% elsif pokemon.type2 == "Plante" %>
                    <span class="plante"><%= pokemon.type2.upcase %></span>
                  <% elsif pokemon.type2 == "Roche" %>
                    <span class="roche"><%= pokemon.type2.upcase %></span>
                  <% elsif pokemon.type2 == "Dragon" %>
                    <span class="dragon"><%= pokemon.type2.upcase %></span>
                  <% elsif pokemon.type2 == "Glace" %>
                    <span class="glace"><%= pokemon.type2.upcase %></span>
                  <% elsif pokemon.type2 == "Spectre" %>
                    <span class="spectre"><%= pokemon.type2.upcase %></span>
                  <% else %>
                    <span class="d-inline"><%= "" %></span>
                  <% end %>
                </p>
              </div>
              <div class="header-right">
                <%= link_to pokemon do %>
                  <div class="btn button-grow"><i class="pokeball-3d"></i></div>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
